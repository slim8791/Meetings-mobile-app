<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeetings.Messaging">
<StackLayout Orientation="Vertical">
  <Entry x:Name="PhoneNumber" Placeholder="Phone number"/>
  <Button Text="Make Call" Clicked="MakeCall"/>
  <Entry Placeholder="Message" x:Name="SMSMessage"/>
  <Button Text="Send SMS" Clicked="SendSMS"/>
  <Entry Placeholder="E-mail Adress" x:Name="Adress"/>
  <Entry Placeholder="Subject" x:Name="Subject"/>
  <Entry Placeholder="Message" x:Name="EmailMessage"/>
  <Button Text="Send E-mail" Clicked="SendEmail"/>
</StackLayout> 
</ContentPage>