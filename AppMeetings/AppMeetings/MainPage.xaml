<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeetings.MainPage"
             Title="Login">
<StackLayout Orientation="Vertical" > 
  <Entry  x:Name="loginTxt"  Placeholder="Login" TextColor="Blue" FontSize="30"/>
  <Entry x:Name="passwordTxt" Placeholder="Password" IsPassword="True"  FontSize="30"/>
  <Button Text="Login !" Clicked="Button_OnClicked"/>
</StackLayout>
</ContentPage>